@using Library.Models.Book
@model Book 
<form asp-action="Update" asp-controller="Book" asp-route-id="@Model.Id" method="post">
    <div class="mb-4">
        <label for="Title" class="form-label">Title</label>
        <input type="text" name="Title" class="form-control" id="Title" aria-describedby="emailHelp" value="@Model.Title">
    </div>
    <div class="mb-4">
        <label for="Author" class="form-label">Author</label>
        <input type="text" name="Author" class="form-control" id="Author" value="@Model.Author">
    </div>
    <div class="mb-4">
        <label for="Quantity" class="form-label">Quantity</label>
        <input type="number" name="Quantity" class="form-control" id="Quantity" value="@Model.Quantity">
    </div>
    <div class="mb-4">
        <label for="BookGenre" class="form-label">Book Genre</label>
        <select name="BookGenre" id="BookGenre" class="form-select">

            <option value="0" selected ="@(Model.BookGenre == 0)">None</option>
            <option value="1" selected ="@(Model.BookGenre == (BookGenre)1)">Novel</option>
            <option value="2" selected="@(Model.BookGenre == (BookGenre)2)">Scientific</option>
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>

</form>